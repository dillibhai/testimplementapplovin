<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/google_flutter_native_ad_unified_native_ad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:visibility="visible">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/google_wholecontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">


                    <!--                    <TextView-->
                    <!--                        android:id="@+id/flutter_native_ad_headline"-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:text=""-->
                    <!--                        android:textColor="@color/grey_800" />-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/google_flutter_native_ad_advertiser"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_weight="1"
                            android:fontFamily="Roboto lol"
                            android:text=""
                            android:textColor="@android:color/black"
                            android:textSize="8dp" />

                        <!--                            <RatingBar-->
                        <!--                                android:id="@+id/flutter_native_ad_star"-->
                        <!--                                style="?android:attr/ratingBarStyleSmall"-->
                        <!--                                android:layout_width="wrap_content"-->
                        <!--                                android:layout_height="wrap_content"-->
                        <!--                                android:layout_marginRight="@dimen/dp_16"-->
                        <!--                                android:isIndicator="true"-->
                        <!--                                android:numStars="5"-->
                        <!--                                android:stepSize="0.5" />-->

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


            <com.google.android.gms.ads.nativead.MediaView
                android:id="@+id/google_flutter_native_ad_media"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:visibility="visible" />


            <TextView

                android:id="@+id/google_flutter_native_ad_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:maxLines="2"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingRight="2dp"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                android:textStyle="bold"
                tools:text="This is description of the ads which can contains multiple lines " />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:weightSum="7">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/google_flutter_native_ad_icon"
                        android:layout_width="30dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:backgroundTint="@android:color/holo_red_light"
                        android:contentDescription="nepali_patro"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/google_flutter_native_ad_headline"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="10dp"
                        tools:text="Title" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.5">

                    <Button
                        android:id="@+id/google_flutter_native_ad_call_to_action"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:textSize="8sp"
                        android:visibility="visible"
                        tools:text="Install" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/google_flutter_native_ad_attribution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="#FFCC66"
            android:gravity="center"
            android:text="Ad"
            android:textColor="#FFFFFF"
            android:textSize="10dp" />
    </RelativeLayout>

</com.google.android.gms.ads.nativead.NativeAdView>
